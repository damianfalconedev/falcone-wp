
<div class="row">
    <div class="large-3 medium-3 small-12 columns footer-navigation">
        {% for item in footer_menu_1.get_items %}
            {% if item.get_children %}
                <h6><a href="{{item.get_link}}">{{item.title}}</a></h6>
                <ul>
                    {% for child in item.get_children %}
                        <li><a href="{{child.get_link}}">{{child.title}}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <a href="{{item.get_link}}">{{item.title}}</a>
            {% endif %}
        {% endfor %}
    </div>
