<div class="row social-logos">
    <div class="medium-3 small-12 columns text-center">
        <img src="{{ site.theme.link }}/imgs/bbb.jpg" />
    </div>
    <div class="medium-6 small-12 columns text-center end">
        <a href="{{ falcone_options.falcone_contact_facebook }}" class="social-button social-fb"></a>
        <a href="{{ falcone_options.falcone_contact_twitter }}" class="social-button social-tw"></a>
        <a href="{{ falcone_options.falcone_contact_youtube }}" class="social-button social-yt"></a>
        <a href="{{ falcone_options.falcone_contact_linkedin }}" class="social-button social-in"></a>
    </div>
</div>
