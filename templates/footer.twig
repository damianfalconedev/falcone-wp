    <div class="medium-5 small-12 columns">
        <p>&copy; Copyright 2015 Damian Falcone & Co. All Rights Reserved</p>
    </div>
    <div class="medium-2 small-12 columns">
        {% if falcone_options.falcone_contact_hiring|length > 0 %}
        <a href="{{ falcone_options.falcone_contact_hiring }}"><img src="{{site.theme.link}}/imgs/nowhiring.png" /></a>
        {% endif %}
    </div>
    <div class="medium-5 small-12 columns final-menu">
        <p>
            {% for item in final_menu.get_items %}
